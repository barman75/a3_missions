 params["_center", "_types", "_distance"];
 private _markers = [];
 
{
	if ((markerType _x) in _types) then {
		if (_x find D_LOCATION >= 0) then {
			if ((_center distance2D (getMarkerPos _x)) <= _distance) then {
				_markers append [_x];
			};
		};
	};
} forEach allMapMarkers;

_markers;